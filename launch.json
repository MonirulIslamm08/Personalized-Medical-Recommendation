{
    "configurations": [
      {
        "type": "debugpy",
        "request": "launch",
        "name": "Launch Flask App",
        "program": "${workspaceFolder}/app.py",
        "args": [
          "run",
          "--no-debugger",
          "--no-reload"
        ],
        "env": {
          "FLASK_APP": "app.py",
          "FLASK_ENV": "development"
        },
        "console": "integratedTerminal"
      }
    ]
  }